<!DOCTYPE html>
<html lang="en">
<head>
    <title>Flash Cards</title>
    <%- include ("../partials/header.ejs") %>
</head>

<body>
<div class="container">
    <h1>Flash Cards!</h1>
    <h3>Welcome <span><%- userName %></span></h3>

    <div class="d-flex justify-content-center">

    </div>

    <div class="container nav-buttons d-flex justify-content-evenly">
        <button class="btn btn-primary" id="getCardsBtn">See all cards</button>
        <button class="btn btn-primary" id="getRandomBtn">See random cards</button>
        <button class="btn btn-primary" id="addCardBtn">Add new card</button>
    </div>

    <div id="main">
        <div id="cards-container" class="container"></div>
        <div id="random-card-container" class="container"></div>
        <div id="add-card-form" class="container"></div>
    </div>

</div>

<div class="modal fade" tabindex="-1" id="deleteModal" aria-labelledby="delete modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Card</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this card?</p>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="cardToDelete">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-secondary" onclick="deleteCard()">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    const userId = "<%- userId %>"
    console.log(userId)
    let cards;

    $(document).ready(function() {
        console.log( "ready!" );
    });

    $("#getCardsBtn").click( async () => {
        await refreshCards();
        hideSections();
        if (cards) buildCards(cards);
    })

    $("#getRandomBtn").click(() => {
        hideSections();
        if (cards) randomCards(cards);
    })

    $("#addCardBtn").click(() => {
        hideSections();
        buildCardForm();
    })

    async function refreshCards() {
        const res = await fetch(`https://enigmatic-brushlands-51613.herokuapp.com/flashCards/cards/${userId}`);
        cards = await res.json();
        console.log( "ready!" );
    }

    function buildCards(cardsData) {
        $("#cards-container").show().empty();
        cardsData.forEach((card) => {
            console.log("card", card);
            console.log("card", card.sidea);

            const cardId = card.id;

            $("#cards-container").append(`
                <div class="card-block">
                    <div class="card d-flex">
                        <div class='side-a'>${card.sidea}</div>
                        <div class='side-b'>${card.sideb}</div>
                    </div>
                    <div class="delete-card" onclick="showDeleteModal(${cardId})">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                          <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                        </svg>
                    </div>
                </div>`
            )
        })
    }

    function showDeleteModal(cardId) {
        $("#deleteModal").modal("show");
        $("#cardToDelete").val(cardId);
    }

    async function deleteCard() {
        const id = $("#cardToDelete").val();
        console.log("deleting card id ", id);
        const res = await fetch(`https://enigmatic-brushlands-51613.herokuapp.com/flashCards/deleteCard/${id}`, {
            method: 'DELETE',
        });
        let deleteResult = await res.json();
        console.log('deleteResult', deleteResult);
        $("#deleteModal").modal("hide");
        await refreshCards();
        hideSections();
    }

    function randomCards(cards) {
        const randomCard = cards[Math.floor(Math.random() * cards.length)];
        console.log("random selection:", randomCard);
        $("#random-card-container").show().empty().append(`
            <div class='container random-card d-flex justify-content-center'>
                <div class="card d-flex">
                    <div class='side-a'>${randomCard.sidea}</div>
                    <div class='side-b'>${randomCard.sideb}</div>
                </div>
                <button id="random-btn" class="btn btn-primary" onclick="changeRandomCard()">Change</button>
            </div>`
        )
    }

    function changeRandomCard() {
        randomCards(cards)
    }

    function buildCardForm() {
        $("#add-card-form").show().empty().append(`
            <div>
                <div class="mb-3">
                    <label for="side-a" class="form-label">Side A</label>
                    <textarea class="form-control" id="side-a" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label for="side-b" class="form-label">Side B</label>
                    <textarea class="form-control" id="side-b" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" onclick="saveCard()">Submit</button>
            </div>
        `);
    }

    async function saveCard() {
        const sidea = $("#side-a").val();
        const sideb = $("#side-b").val();

        if (sidea || sideb) {
            console.log("side A", sidea)
            console.log("side B", sidea)
            $("#add-card-form").hide();
            const data = { userId, sidea, sideb};
            const insertCall = await fetch(`https://enigmatic-brushlands-51613.herokuapp.com/flashCards/saveCard`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            });
            console.log('insertCall', insertCall);

            await refreshCards();
            hideSections();
        }
    }

    function hideSections() {
        $("#cards-container").hide();
        $("#random-card-container").hide();
        $("#add-card-form").hide();
    }
</script>
</body>
</html>
