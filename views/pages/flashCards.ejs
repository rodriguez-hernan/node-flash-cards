<!DOCTYPE html>
<html>
<head>
    <%- include ("../partials/header.ejs") %>
</head>

<body>
<div class="container">
    <h1>Flash Cards!</h1>
    <h3>Welcome <span><%- user.name %></span></h3>

    <div class="d-flex justify-content-center">
        <button class="btn btn-primary" id="getCardsBtn">Get them cards!</button>
    </div>
</div>

<script>
    $("#getCardsBtn").click(() => {
        const userId = <%- user.name %>
        fetch(`/cards/${userId}`)
          .then(response => response.json())
          .then(data => console.log(data))
    })

</script>
</body>
</html>
